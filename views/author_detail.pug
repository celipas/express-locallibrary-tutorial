extends layout

block content

    h1 Author: #{author.name}
    if (author.date_of_birth_formatted =='Invalid DateTime' &&  author.date_of_death_formatted =='Invalid DateTime')
        p #{author.date_of_birth} - #{author.date_of_death}
    else if (author.date_of_birth_formatted !='Invalid DateTime' &&  author.date_of_death_formatted !='Invalid DateTime')
        p #{author.date_of_birth_formatted} - #{author.date_of_death_formatted}
    else if (author.date_of_death_formatted =='Invalid DateTime')
        p #{author.date_of_birth_formatted} - #{author.date_of_death}


    div(style='margin-left:20px;margin-top:20px')

        h4 Books

        dl
            each book in author_books
                dt
                    a(href=book.url) #{book.title}
                dd #{book.summary}

            else
                p This author has no books.
    hr
    p
        a(href=author.url+'/update') Update Author
    p
        a(href=author.url+'/delete') Delete Author